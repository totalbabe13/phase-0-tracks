a_hash = {
  ann:  'home',
  dan:  'work',
  ben:  'home',
  fay:  'work',
  beth: 'gym',
  sam:  'store',
  hope: 'work'
}  

puts 'Original hash:'
p a_hash
puts
puts '**AFTER USING --> .delete_if METHOD: '
a_hash.delete_if {|name,place| place == 'work'  }  
p a_hash

puts 
puts
puts
puts ' -   -   -   -   -   -   -   -   -'
puts 
puts 
puts


another_array = [0,2,3,4,5,6,7,8,9,10]
puts 'Original array:'
p another_array
puts
puts '**AFTER USING --> select! METHOD:'  
another_array.select! {|number| number.odd? } 
p another_array 
puts 
puts

